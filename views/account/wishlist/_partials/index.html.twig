{% extends "/_layouts/base.html.twig" %}
{% import "/account/_macros/base.html.twig" as account %}
{% import "/_macros/form-elements-bootstrap.html.twig" as forms %}

{% do account.login() %}

{% block title %}Account - Wishlist{% endblock %} 

{% block breadcrumb %}
    {{ base.breadcrumbs({'Account':'/account','Wishlists':'/account/wishlists','Wishlist':''}) }}
{% endblock %}

{% block content %}
<div id="view-whishlist" class="container-fluid title">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="section-title-inner"><span><i class="fa fa-heart"></i> 
                View Wishlist of {{ wishlist.name }}</span>
                </h2>
                {# Begin navigation #}
                <div class="row userInfo hidden-xs">
                    <div class="col-xs-12 col-sm-12">
                        {# Begin navigation #}
                        <div class="navigation">
                        {{account.navigation('wishlists')}}
                        </div>
                        {# End navigation #}
                        <div class="clear clearfix"></div><hr/>
                    </div>
                </div>
        {# End navigation #}
        </div>
    </div>
    {# Begin content #}
    <div class="row">
        <div class="col-sm-12 clearfix">
            {% include '/wishlist/_partials/list.html.twig' %}
        </div>
    </div>
    {# End content #}
    {# Begin bottom actions #}
    <div class="row">
        <div class="col-sm-12 clearfix">
            <ul class="pager">
                <li class="previous pull-right"><a href="{{app.url}}/"> <i class="fa fa-home"></i> Go to Shop </a>
                </li>
                <li class="next pull-left"><a href="{{app.url}}/account/">&larr; Back to My Account</a></li>
            </ul>
        </div>
    </div> <!-- /Row -->
    {# End bottom actions #}
</div>
{% endblock %}
