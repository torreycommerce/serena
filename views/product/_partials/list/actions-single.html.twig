
{# Begin registry button #}
{% if items_in_registry is empty %}
{% set added = false %}
{% else %}
{% set added = true %}
{% endif %}
{% if registries is empty %}
<div class="col-md-6 col-xs-6">
    <button type="submit" name="action" value="registry" class="btn btn-block btn-default">
        {% if added %}
        <i class="fa fa-check"></i>
        {% else %}
        <i class="fa fa-gift"></i>
        {% endif %}
        <span>Registry</span>
    </button>
</div>
{% else %}
<div class="col-md-6 col-xs-6">
    <button type="submit" name="action" value="registry" class="btn btn-block btn-default" data-toggle="dropdown">
        {% if added %}
        <i class="fa fa-check"></i>
        {% else %}
        <i class="fa fa-gift"></i>
        {% endif %}
        <span>Registry</span>
    </button>
    <ul class="dropdown-menu action-drop-registry" style="margin-left:10px;" role="menu">
        {% for registry in registries %}
        <li><button type="submit" class="btn btn-block btn-default btn-sm" name="action" value="registry/{{registry.id}}">Add to '{{registry.name}}'</button></li>
        {% endfor %}
    </ul>
</div>
{% endif %}
{# End registry button #}
